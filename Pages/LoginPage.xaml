<Page x:Class="RemontApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemontApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBox x:Name="login_text" HorizontalAlignment="Center" Height="32" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
        <TextBox x:Name="password_text" HorizontalAlignment="Center" Height="38" Margin="0,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
        <Label Content="Логин" HorizontalAlignment="Left" Height="28" Margin="295,82,0,0" VerticalAlignment="Top" Width="138"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Height="30" Margin="295,146,0,0" VerticalAlignment="Top" Width="138"/>
        <Button Content="Принять" HorizontalAlignment="Left" Height="44" Margin="295,252,0,0" VerticalAlignment="Top" Width="138" Click="Button_Click"/>

    </Grid>
</Page>
